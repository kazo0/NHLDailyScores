{
  "manifest_version": 2,

  "name": "NHL Daily Scores",
  "description": "This extension provides the most up-to-date scores for the day's current NHL games",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "http://m.thescore.com/"
  ],
   "web_accessible_resources": [
    "popup.js",
    "jquery.js",
    "nhl.css",
    "application.css"
  ]
}
